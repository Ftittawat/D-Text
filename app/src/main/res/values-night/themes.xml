<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DText" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_primary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Base.Theme.DText.Light.SystemBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Base.Theme.DText.Splash.Screen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/blue_primary</item>
        <!-- Status bar color. -->
        <item name="android:background">@color/blue_primary</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>